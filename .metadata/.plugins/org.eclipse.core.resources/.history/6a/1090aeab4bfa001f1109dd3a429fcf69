package core_java;

public class PyarmidVar {

	public static void main(String[] args) {
		int n=11;
		int sp=n-1;
		int st=1;
		int mid=(n%2)+1;
		for(int i=1;i<=n;i++) {
			for(int j=1;j<=sp;j++) {
				System.out.print(" ");
			}
			for(int j=1;j<=st;j++) {
				System.out.print("*");
			}if(i<mid) {
			sp++;
			st+=2;
			}else {
				st-=2;
				sp--;
			}
			System.out.println("");
		}
		
	}

}
