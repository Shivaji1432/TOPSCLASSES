package core_java;

public class Buterfly {
public static void main(String[] args) {
	int n=10;
	int sp=n-1;
	int st=1;
	for(int i=n;i>=1;i--) {
		for(int j=1;j<=sp;j++) {
			System.out.print(" ");
		}for(int j=1;j<=st;j++) {
			System.out.print("*");
		}
		System.out.println("");
		st++;
		sp--;
		
	}
	
}
}
