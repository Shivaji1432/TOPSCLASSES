package core_java;

public class Exe1 {
	public static void main(String[] args) {
		int rows = 5;
		int space = rows - 1;
		int stars = 1;
		for (int i = 1; i <= rows; i++) {
			for (int j = 1; j <= space; j++) {
				System.out.print(" ");
			}
		
		for (int j = 1; j <= stars; j++) {
			System.out.print("*");
		}
		stars+=1;
		stars++;
		System.out.println("");
		if(stars==3) {
			stars--;
			space++;
		}else {
			System.out.print("");
		}
		
	}
}
}
